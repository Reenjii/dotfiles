. ~/.shell/env_functions

umask 0022

# Personal information
export NAME='Benjamin Herlin'
export EMAIL='benjaminherlin@gmail.com'

# Preferred programs
export PAGER=less
export EDITOR=vim
export VISUAL=$EDITOR

# Language
export LANG='en_US.UTF-8'
export LC_ALL=$LANG
export LC_COLLATE=$LANG
export LC_CTYPE=$LANG
export LC_MESSAGES=$LANG
export LC_MONETARY=$LANG
export LC_NUMERIC=$LANG
export LC_TIME=$LANG

# go
export GOROOT="${HOME}/goroot/go"
export GOPATH="${HOME}/go"
pathprepend "${GOROOT}/bin" PATH
pathprepend "${GOPATH}/bin" PATH

# rlwrap home
export RLWRAP_HOME="${HOME}/.rlwrap"

# Path settings
pathprepend "${HOME}/bin" PATH
pathprepend "${HOME}/usr/bin" PATH
pathprepend "${HOME}/.local/bin" PATH
pathprepend "${HOME}/node/node-v4.4.4-linux-x64/bin" PATH

# The current directory should never be in $PATH
pathremove "." PATH
pathremove "" PATH
