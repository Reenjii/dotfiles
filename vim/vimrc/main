" this must be first, because it changes other options as a side effect
set nocompatible

set encoding=utf-8
set fileencoding=utf-8

filetype plugin on
filetype indent on

syntax on

set background=dark

set mouse=a
set mousehide
set ttymouse=xterm2
set t_Co=256 " tell the term has 256 colors
colorscheme solarized

" allow backspacing over everything in insert mode
set backspace=indent,eol,start

set history=1000

set showcmd
set showmode

set number
set ruler
set cursorline

" display tabs and trailing spaces
set list
set listchars=eol:↵,tab:▸\ ,trail:•,nbsp:•,extends:»,precedes:«

" search
set incsearch
set hlsearch
set showmatch
set ignorecase
set smartcase

" line wrapping
set wrap
set linebreak
set textwidth=0

" ~/.vim/undofiles directory should be manually created
set undodir=~/.vim/undofiles
set undofile

" indent settings
set noexpandtab
set shiftwidth=4
set tabstop=4

set autoindent
set smartindent

" folding settings
set foldmethod=indent
set foldnestmax=3
set foldenable
set foldcolumn=2
set foldlevelstart=20

set showmatch

" auto completion
set wildmode=list:full
set wildmenu
set wildignore=*.o,*.obj,*~

set formatoptions-=o " dont continue comments when pushing o/O
set formatoptions-=r " do not automatically insert a comment leader after an enter
set formatoptions-=t " do no auto-wrap text using textwidth (does not apply to comments)

set scrolloff=4
set sidescrolloff=7
set sidescroll=1

set hidden
set nowritebackup
set nobackup

set nostartofline

set showtabline=2

set splitbelow
set splitright

" Go vim - :help go-settings
let g:go_fmt_command = "goimports"
" Do not open browser
let g:go_play_open_browser = 0
" Run GoFmt on save
let g:go_fmt_autosave = 1
" Do not open a quickfix window on GoFmt
let g:go_fmt_fail_silently = 1
" Highlight instances of tabs following spaces
let g:go_highlight_space_tab_error = 1
" Highlight Functions, Methods and Structs
let g:go_highlight_functions = 1
let g:go_highlight_methods = 1
let g:go_highlight_fields = 1
let g:go_highlight_structs = 1
let g:go_highlight_interfaces = 1
let g:go_highlight_operators = 1
" Solve lag issued with syntastic
"let g:syntastic_mode_map = { 'mode': 'active', 'passive_filetypes': ['go'] }
let g:go_list_type = "quickfix"


" syntastic
" use leader+e to display errors in a split
noremap <leader>e :Errors<CR>

" list of go_checkers
let g:syntastic_go_checkers = ['go', 'gofmt', 'golint' , 'govet', 'errcheck']
"let g:syntastic_always_populate_loc_list = 1
"let g:syntastic_auto_loc_list = 2

" list of javascript_checkers
let g:syntastic_javascript_checkers = ['jscs', 'jshint']

" Snippets
" Trigger configuration. Do not use <tab> if you use https://github.com/Valloric/YouCompleteMe.
let g:UltiSnipsExpandTrigger="<tab>"
let g:UltiSnipsJumpForwardTrigger="<c-b>"
let g:UltiSnipsJumpBackwardTrigger="<c-z>"

" If you want :UltiSnipsEdit to split your window.
let g:UltiSnipsEditSplit="vertical"

" Javascript syntax
let g:used_javascript_libs = 'angularjs,angularui'
